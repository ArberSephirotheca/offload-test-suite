          if (((((WaveGetLaneIndex() == 16) || (WaveGetLaneIndex() == 24)) || (WaveGetLaneIndex() == 47)) || (WaveGetLaneIndex() == 39))) {
            result = (result + WaveActiveMin((WaveGetLaneIndex() + 2)));
