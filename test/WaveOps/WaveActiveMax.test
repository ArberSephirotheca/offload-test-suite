# METAL-NEXT: Data:            [ 0, 0, 0, 0 ]
# VULKAN-NEXT: Data:            [ nan, nan, nan, nan ]
# CHECK: Access:          ReadWrite
# CHECK-NEXT: Format:          Float32
# CHECK-NEXT: Data:            [ inf, inf, inf, inf ]
# CHECK: Access:          ReadWrite
# CHECK-NEXT: Format:          Float32
# METAL-NEXT: Data:            [ 0, 0, 0, 0 ]
# VULKAN-NEXT: Data:            [ -inf, -inf, -inf, -inf ]
